<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" >
	<center>
		<VBox alignment="center" spacing="10">
			<Text text="Generate SSS/PhilHealth/Pagibig for the following month?" />
			<TextField fx:id="contributionMonthField" maxWidth="150" />
		
			<HBox spacing="10" alignment="center" >
				<padding><Insets  top="10" /></padding>
				<Button text="Yes" onAction="#generateContributions" />
				<Button text="No" onAction="#cancel" />
			</HBox>
		</VBox>
	</center>
</BorderPane>
